/*== Header ===*/

.header{
    display: none;
}

/*== Hero ===*/

.hero{
    font-family: 'Roboto', sans-serif;
    position: absolute;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
}
.hero img{
    width: 100vw;
    height: 100vh;
    margin-top: -10px;
    object-fit: fill;
}

.hero__logo{
    background-color: #fff;
    color: #787876;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 2rem;
    font-weight: 700;
    position: absolute;
    top: 50px;
    left: 100px;
    text-transform: uppercase;
    width: 225px;
    height: 90px;
    letter-spacing: 20px;
}
.hero__logo p {
    margin: 0;
    text-align: center;
}