/*== Header ===*/

.header{
    display: none;
}

/*== Hero ===*/

.hero{
    font-family: 'Roboto', sans-serif;
    position: absolute;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
}
.hero img{
    width: 100vw;
    height: calc(100vh + 10px);
    object-fit: fill;
    margin-top: -10px;
}

.hero__logo{
    background-color: #fff;
    color: #787876;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 2rem;
    font-weight: 700;
    position: absolute;
    top: 50px;
    left: 100px;
    text-transform: uppercase;
    width: 225px;
    height: 90px;
}

.hero__logo p {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    width: fit-content;
    letter-spacing: 15px;
}
.hero__menu{
    position: absolute;
    top: 50px;
    right: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    min-width: 45vw;
    height: 90px;
    padding-right: 100px;
}

.hero__menu a {
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 5px;
}
.hero__info{
    position: absolute;
    top: 55%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
    text-align: center;
}

.hero__info p:first-child{
    font-size: 3.5rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 25px;
    margin-bottom: 20px;
}

.hero__info p:nth-child(2){
    color: #f84545;
    margin-top: 0px;
    font-size: 2rem;
    text-transform: uppercase;
    letter-spacing: 10px;
    font-weight: 500;
}

.hero__down {
    position: absolute;
    top: 90%;
    left: 50%;
    transform: translate(-50%,-50%);
    font-size: 5rem;
    color: #fff;
    font-weight: 200;
    cursor: pointer;
    width: 80px;
    text-align: center;
}

.hero__down p{
    transform: scale(1.5,1);
}